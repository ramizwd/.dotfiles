{
    "hyprland/submap": {
        "format": "<span style=\"italic\">{}</span>"
    },

    "tray": {
        "spacing": 10,
        "icon-size": 18,
    },

    "clock": {
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "{:%d/%m - %H:%M}",
    },

    "cpu": {
        "interval": 1,
        "format": "  {icon0}{icon1}{icon2}{icon3} {usage:>2}%",
        "format-icons": ["▁", "▂", "▃", "▄", "▅", "▆", "▇", "█"],
        "on-click": "kitty --class system-popup -e btop"
    },

    "memory": {
        "interval": 30,
        "format": "{}%  "
    },

    "custom/razer": {
        "exec": "razer-bat-json.py",
        "interval": 60,
        "return-type": "json",
        "format": "{}"
    },

    "network": {
        "format-ethernet": "󰈀 ",
        "format-disconnected": "Disconnected ⚠",
        "tooltip": false
    },

    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-muted": "",
        "format-icons": {
            "default": ["", "", " "]
        },
        "on-click": "hyprctl dispatch exec '[float; size 1300 800] pavucontrol'"
    },

    "custom/power": {
        "format": " ⏻ ",
        "tooltip": false,
        "on-click": "powermenu.sh"
    },

    "custom/weather": {
        "format": "{}",
        "tooltip": true,
        "interval": 3600,
        "exec": "weather.sh",
        "return-type": "text",
        "on-click": "wttr-popup.sh",
        "on-click-right": "wttr-popup.sh v2"
    }
}
